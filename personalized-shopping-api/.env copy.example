# Environment Configuration
ENVIRONMENT=development  # development, staging, production
DEBUG=true

# Data Paths
DATA_DIR=./data
PURCHASE_DATA_PATH=./data/raw/customer_purchase_data.csv
REVIEW_DATA_PATH=./data/raw/customer_reviews_data.csv
EMBEDDINGS_DIR=./data/embeddings
VECTOR_INDEX_PATH=./data/embeddings/customer_index.faiss

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434

# Model Selection
PROFILING_MODEL=llama3.2:3b
SENTIMENT_MODEL=llama3.1:8b
RECOMMENDATION_MODEL=llama3.1:8b
RESPONSE_MODEL=llama3.1:8b

# Embedding Configuration
EMBEDDING_MODEL=BAAI/bge-base-en-v1.5
EMBEDDING_DIMENSION=768
NORMALIZE_EMBEDDINGS=true

# Vector Database
VECTOR_DB_TYPE=faiss  # faiss, chroma, pinecone
FAISS_INDEX_TYPE=ivf  # flat, ivf, hnsw
CHROMA_PERSIST_DIRECTORY=./data/chroma_db

# Agent Configuration
SIMILARITY_TOP_K=20
SIMILARITY_THRESHOLD=0.75
SENTIMENT_THRESHOLD=0.6
RECOMMENDATION_TOP_N=5
MIN_REVIEWS_FOR_INCLUSION=3

# Performance
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600
MAX_RETRIES=3
REQUEST_TIMEOUT_SECONDS=30

# Observability
ENABLE_TRACING=true
ENABLE_METRICS=true
LOG_LEVEL=INFO
METRICS_PORT=8000

# LangSmith (Optional)
LANGSMITH_ENABLED=false
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=personalized-shopping-assistant

# Security
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
INPUT_MAX_LENGTH=500
