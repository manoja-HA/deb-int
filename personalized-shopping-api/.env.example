# Environment Configuration
ENVIRONMENT=development
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=true

# CORS
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Security
SECRET_KEY=change-me-in-production

# Database (Optional)
DATABASE_URL=

# Redis (Optional)
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=3600
ENABLE_CACHE=true

# Data Paths
DATA_DIR=./data
PURCHASE_DATA_PATH=./data/raw/customer_purchase_data.csv
REVIEW_DATA_PATH=./data/raw/customer_reviews_data.csv
EMBEDDINGS_DIR=./data/embeddings
VECTOR_INDEX_PATH=./data/embeddings/customer_index.faiss

# LLM Configuration
OLLAMA_BASE_URL=http://localhost:11434
PROFILING_MODEL=llama3.2:3b
SENTIMENT_MODEL=llama3.1:8b
RECOMMENDATION_MODEL=llama3.1:8b
RESPONSE_MODEL=llama3.1:8b

# Embeddings
EMBEDDING_MODEL=BAAI/bge-base-en-v1.5
EMBEDDING_DIMENSION=768

# Vector Database
VECTOR_DB_TYPE=faiss
SIMILARITY_THRESHOLD=0.75
SIMILARITY_TOP_K=20

# Agent Configuration
MIN_PURCHASES_FOR_PROFILE=1
SENTIMENT_THRESHOLD=0.6
RECOMMENDATION_TOP_N=5

# Observability
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_METRICS=true
ENABLE_TRACING=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
